<div class="col-md-3">
  <div class="text-left">
    <h2>User info</h2>
  </div>
    <div class="text-center">
    <%= attachment_image_tag user, :profile_image, :fill, 150, 150, fallback: "no-image.jpeg", class:"my-3 rounded-circle" %>
    </div>
    <table class="table">
      <tbody><tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>your movie</th>
        <th><%= user.movie_name %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= link_to user.followings.count, user_followings_path(user.id) %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to user.followers.count, user_followers_path(user.id) %></th>
      </tr>
      <tr>
        <% if current_user.id != user.id %>
          <% if current_user.following?(user) %>
            <th><%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %></th>
          <% else %>
            <th><%= link_to "Follow", user_relationships_path(user.id), method: :post %></th>
          <% end %>
        <% end %>
      </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to '', edit_user_path(user), class: "btn btn-outline-secondary btn-Primary fas fa-cogs" %>
    </div>
  </div>
