<div class="card-list-container py-5">
   <div class="new-comment card-text">
    <%= form_with(model:[@movie, @movie_comment]) do |f| %>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">コメントする</label>
        <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
      </div>
      <%= f.submit "Send", class:"btn btn-lg btn-info mt-2 float-right" %>
    <% end %>
  </div>
 <hr>
  <div class="comments card-text">
    <h4 class="mt-3"><%= @movie.movie_comments.count %>件コメント</h4>
    <% @movie.movie_comments.each do |movie_comment| %>
      <div class="media border mb-3">
        <%= attachment_image_tag movie_comment.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", class: class:"rounded-circle" %>
        <div class="media-body ml-4 p-3">
          <p><%= movie_comment.created_at.strftime('%Y/%m/%d') %></p>
          <p><%= movie_comment.comment %></p>
          <% if movie_comment.user == current_user %>
            <%= link_to "Delete", movie_movie_comment_path(movie_comment.movie, movie_comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>