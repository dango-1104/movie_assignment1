<h2>Follower Users</h2>
<table class="table table-hover table-inverse">
<% if @followers.exists? %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @followers.each do |follower| %>
      <tr>
        <td><%= attachment_image_tag follower, :profile_image, :fill, 40, 40, fallback: "no-icon.jpeg"%></td>
        <td><%= follower.name %></td>
        <td>フォロー数: <%= follower.followings.count %></td>
        <td>フォロワー数: <%= follower.followers.count %></td>
        <td><%= link_to "Show", user_path(follower) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
