<h2>Following Users</h2>
<table class="table table-hover table-inverse">
<% if @users.exists? %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Follow</th>
      <th>Follower</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no-icon.jpg", class:"my-1 rounded-circle" %>
          <span><strong><%= user.name %></strong></span>
        </td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td><%= link_to "Show", user_path(user), class: "btn btn-info pull-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>No users</p>
<% end %>
