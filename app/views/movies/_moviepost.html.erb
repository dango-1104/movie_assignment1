<% movies.each do |movie| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to movie_path(movie.id) do %>
      <%= attachment_image_tag movie, :movie_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag movie.user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(movie_path(movie.id), class:"text-dark") do %>
              <strong><i class="far fa-file-video"></i><span> <%= movie.title %></span></strong>
            <% end %>
          </p>
          <div class="star_<%= movie.id %>"></div>
          <p class="card-text">Note：<%= movie.body %></p>
          <span><i class="fas fa-user"></i> By <%= movie.user.name %> ｜ </span>
          <span><%= link_to "#{movie.movie_comments.count} Comment", movie_path(movie.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>

  <script>
    $('.star_<%= movie.id %>').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    score: <%= movie.star %>,
    readOnly: true,
    half: true
    });
  </script>
<% end %>

