<% if user_signed_in? %>
  <div class="search_form middle">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['User'], ['Movie']]) %>
      <%= f.select :search, options_for_select([["perfect","perfect_match"], ["forward","forward_match"],  ["backword","backword_match"], ["partical","partial_match"]]) %>
      <%= f.submit "Search", class: "btn-sm btn-info" %>
    <% end %>
  </div>
<% end %>