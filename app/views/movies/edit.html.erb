<div class="container">
  <% if @movie.errors.any? %>
    <%= @movie.errors.count %>件のエラーが発生しました
    <ul>
      <% @movie.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Edit post</h2>
      <%= form_with model: @movie, local:true do |f| %>

      <div class="form-group">
        <label for="movie_image">Photo</label>
        <%= f.attachment_field :movie_image, class: "form-control-file movie_image" %>
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        <%= f.text_field :title, class: "form-control title" %>
      </div>

      <div class="form-group">
        <label for="body">Note</label>
        <%= f.text_area :body, class: "form-control body" %>
      </div>

      <div class="field" id="star">
        <label for="star">Star</label>
      </div>

      <div class="form-group">
        <h4><%= f.submit 'Update Post', class: "btn btn-secondary" %></h4>
      </div>
      <% end %>
      <%= link_to "Show", movie_path(@movie) %>
      <%= link_to "Back", movies_path %>
    </div>
  </div>
</div>

<script>
$('#star').raty({
  size     : 36,
  starOff:  '<%= asset_path('star-off.png') %>',
  starOn : '<%= asset_path('star-on.png') %>',
  starHalf: '<%= asset_path('star-half.png') %>',
  scoreName: 'movie[star]',
  half: true
});
</script>